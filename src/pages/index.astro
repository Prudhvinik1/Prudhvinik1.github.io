
---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import astro from '../assets/about-astro.png'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['Python', 'Java','C#','Golang','JavaScript','HTML','CSS','Solidity','C/C++']
const frontend = ['ReactJS', 'HTML', 'CSS', 'JavaScript']
const backend = ['Flask', 'Django', '.NET', 'Node.js']
const others = ['Kafka', 'RabbitMQ', 'Redis', 'ELK']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<section class='flex flex-col items-center gap-y-7'>
			<Image
				src={astro}
				alt='profile photo'
				class='h-28 w-auto rounded-full bg-[#FFBE98] p-2'
				loading='eager'
			/>

			<div class='flex flex-col items-center gap-y-4'>
				<h1 class='text-3xl font-bold'>Prudhvi Nikku</h1>
				<a
					href='https://github.com/Prudhvinik1'
					class='flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm transition-all hover:shadow-md'
				>
					<span class='relative flex items-center justify-center'>
						<span
							class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
						></span>
						<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
					</span>

					<p class='font-medium'>GitHub</p>
				</a>
				<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
					<Label title='Software Engineer'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M4.615 20q-.69 0-1.152-.462Q3 19.075 3 18.385v-9.77q0-.69.463-1.152Q3.925 7 4.615 7H9V5.615q0-.69.463-1.152Q9.925 4 10.615 4h2.77q.69 0 1.153.463q.462.462.462 1.152V7h4.385q.69 0 1.152.463q.463.462.463 1.152v9.77q0 .69-.462 1.152q-.463.463-1.153.463zm0-1h14.77q.23 0 .423-.192q.192-.193.192-.423v-9.77q0-.23-.192-.423Q19.615 8 19.385 8H4.615q-.23 0-.423.192Q4 8.385 4 8.615v9.77q0 .23.192.423q.193.192.423.192M10 7h4V5.615q0-.23-.192-.423Q13.615 5 13.385 5h-2.77q-.23 0-.423.192q-.192.193-.192.423zM4 19V8z'
							></path></svg
						>
					</Label>
					<Label
						title='Connect on LinkedIn'
						as='a'
						href='https://www.linkedin.com/in/prudhvinikku/'
						target='_blank'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 16 16'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								fill='currentColor'
								d='M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z'
							></path></svg
						>
					</Label>
				</div>
			</div>
		</section>

		<Section title='About'>
			<p class='text-muted-foreground'>
				I'm currently pursuing a Master of Science in Computer Science at the University of Massachusetts, Amherst, where I focus on Secure Distributed Systems and Advanced NLP. I hold a Bachelor's degree in Computer Science and Engineering from the Indian Institute of Information Technology, Sricity.
			</p>
		</Section>
		{
			allPostsByDate.length > 0 && (
				<Section title='Posts'>
					<ul class='flex flex-col gap-y-2'>
						{allPostsByDate.map((p) => (
							<li class='flex flex-col gap-x-2 sm:flex-row'>
								<PostPreview post={p} />
							</li>
						))}
					</ul>
				</Section>
			)
		}

		<Section title='Experience'>
			<Card
				heading='RedBus'
				subheading='Software Engineer'
				date='June 2022 - July 2023'
				imagePath='/src/assets/about-astro.png'
				altText='RedBus'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Launched RedPass program, driving $450,000 annual revenue increase and enhancing market competitiveness.
					</li>
					<li>
						Engineered microservices handling 3 million requests/hour, boosting platform scalability for Indiaâ€™s bus ticketing service serving 56M users over 300,000 routes.
					</li>
					<li>
						Led .NET Core migration, achieving 100% ROI in first year through AWS cost reduction and system optimization.
					</li>
				</ul>
			</Card>
			<Card
				heading='Tata Consultancy Services'
				subheading='System Engineer'
				date='August 2020 - June 2022'
				imagePath='/src/assets/about-astro.png'
				altText='TCS'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Developed high-efficiency SOAP APIs, reducing XML size by 50% and enhancing cross-functional collaboration in life science teams.
					</li>
					<li>
						Improved manufacturing business logic performance by 10% through optimization of .NET, SQL, and JavaScript implementations.
					</li>
					<li>
						Designed and executed comprehensive unit and functional tests for 15+ features, significantly improving product quality and reducing post-release issues by 15%.
					</li>
				</ul>
			</Card>
			<Card
				heading='Pichain Labs'
				subheading='Software Engineering Intern'
				date='January 2020 - June 2020'
				imagePath='/src/assets/about-astro.png'
				altText='Pichain Labs'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Spearheaded KYC/AML engine development using Flask and MongoDB for 3+ clients, enhancing regulatory compliance and risk management.
					</li>
					<li>
						Architected a scalable Graph Database system with Neo4j and Python, enabling advanced Knowledge Graph creation and data relationships analysis.
					</li>
				</ul>
			</Card>
			<Card
				heading='IBM Research'
				subheading='Machine Learning Intern'
				date='January 2020 - June 2020'
				imagePath='/src/assets/about-astro.png'
				altText='IBM Research'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Researched deep learning models for aggressive behavior detection, resulting in a 5% to 13% accuracy increase across datasets.
					</li>
					<li>
						Conceptualized and integrated Faster R-CNN models for handgun detection in video footage, significantly improving threat detection capabilities.
					</li>
				</ul>
			</Card>
		</Section>

		<Section title='Education'>
			<Card
				heading='University of Massachusetts, Amherst'
				subheading='Master of Science in Computer Science'
				date='August 2023 - May 2025'
				imagePath='/src/assets/about-astro.png'
				altText='UMass Amherst'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Coursework: Secure Distributed Systems, Advanced NLP, Systems for Deep Learning, Software Engineering
					</li>
				</ul>
			</Card>
			<Card
				heading='Indian Institute of Information Technology, Sricity'
				subheading='Bachelor of Technology in Computer Science and Engineering'
				date='July 2016 - June 2020'
				imagePath='/src/assets/about-astro.png'
				altText='IIIT Sricity'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Coursework: Data Structures & Algorithms, Operating Systems, Machine Learning, Databases, Web Development
					</li>
				</ul>
			</Card>
		</Section>

		<Section title='Projects'>
			<div class='flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0'>
				<ProjectCard
					href='https://github.com/Prudhvinik1/emotion-cause-pair-extraction'
					heading='Emotion Cause Pair Extraction (Semeval 2024)'
					subheading='Explored and evaluated a question-answering paradigm for ECPE, introducing innovative methodologies that increased emotion-cause pair extraction accuracy by 22% and improved model interpretability.'
					imagePath='/src/assets/coming-soon.png'
					altText='Emotion Cause Pair Extraction'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					href='https://github.com/Prudhvinik1/patient-tracker-system'
					heading='Patient Tracker Management System'
					subheading='Engineered a full-stack web application for efficient patient data CRM, with 75% of user satisfaction survey respondents reporting incline in ease of use and navigation.'
					imagePath='/src/assets/coming-soon.png'
					altText='Patient Tracker Management System'
					class='w-full sm:w-1/2'
				/>
			</div>
		</Section>

		<Section title='Skills'>
			<SkillLayout title='Languages' skills={languages} />
			<SkillLayout title='Frontend' skills={frontend} />
			<SkillLayout title='Backend' skills={backend} />
			<SkillLayout title='Others' skills={others} />
		</Section>
	</div>
	<a
		href='https://github.com/Prudhvinik1'
		class='mt-16 flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm transition-all hover:shadow-md'
	>
		<span class='relative flex items-center justify-center'>
			<span
				class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
			></span>
			<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
		</span>

		<p class='font-medium'>Resume</p>
	</a>
</PageLayout>
